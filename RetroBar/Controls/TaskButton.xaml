<UserControl x:Class="RetroBar.Controls.TaskButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RetroBar.Converters"
             xmlns:controls="clr-namespace:RetroBar.Controls"
             xmlns:utilities="clr-namespace:RetroBar.Utilities"
             Loaded="TaskButton_OnLoaded"
             Unloaded="TaskButton_OnUnloaded"
             ClipToBounds="False">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <!-- Pinned-only items are tiny like toolbar buttons, remove width constraint -->
                <DataTrigger Binding="{Binding Path=IsPinnedOnly}" Value="True">
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <converters:BoolToInvertedVisibilityConverter x:Key="boolToInvertedVisibilityConverter" />
        <converters:AnyBoolToInvertedVisibilityConverter x:Key="anyBoolToInvertedVisibilityConverter" />
        <converters:ToolTipHorizontalOffsetConverter x:Key="toolTipHorizontalOffsetConverter" />
        <converters:ToolTipVerticalOffsetConverter x:Key="toolTipVerticalOffsetConverter" />
        <converters:ToolTipPlacementConverter x:Key="toolTipPlacementConverter" />
        <converters:TaskLabelConverter x:Key="taskLabelConverter" />
        <converters:InverseScaleConverter x:Key="inverseScaleConverter" />
        <converters:TaskButtonStyleConverter x:Key="TaskButtonStyleConverter" />

        <!-- Style for pinned-only items - uses ToolbarButton (like Quick Launch) -->
        <Style x:Key="PinnedOnlyButtonStyle" TargetType="Button" BasedOn="{DynamicResource ToolbarButton}">
            <Setter Property="MinWidth" Value="0" />
        </Style>

        <!-- Style for running/active items - uses standard Button -->
        <Style x:Key="RunningButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static utilities:Settings.Instance}, Path=CompressTaskbarButtons}" Value="True">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CompressedTaskIcon" TargetType="Image">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static utilities:Settings.Instance}, Path=CompressTaskbarButtons}" Value="True">
                    <Setter Property="Margin" Value="0" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Source={x:Static utilities:Settings.Instance}, Path=CompressTaskbarButtons}" Value="False">
                    <Setter Property="Margin" Value="0,0,3,0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid ClipToBounds="False">
        <Popup Name="GroupPopup"
               PlacementTarget="{Binding ElementName=AppButton}"
               StaysOpen="True"
               AllowsTransparency="True"
               MouseEnter="HoverPreviewPopup_MouseEnter"
               MouseLeave="HoverPreviewPopup_MouseLeave"
               Opened="GroupPopup_Opened">
            <Popup.Placement>
                <MultiBinding Converter="{StaticResource toolTipPlacementConverter}" UpdateSourceTrigger="PropertyChanged">
                    <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                </MultiBinding>
            </Popup.Placement>
            <Popup.HorizontalOffset>
                <MultiBinding Converter="{StaticResource toolTipHorizontalOffsetConverter}" UpdateSourceTrigger="PropertyChanged">
                    <Binding ElementName="AppButton" Path="ActualWidth"/>
                    <Binding ElementName="GroupPopupContent" Path="ActualWidth"/>
                    <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                    <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                </MultiBinding>
            </Popup.HorizontalOffset>
            <Popup.VerticalOffset>
                <MultiBinding Converter="{StaticResource toolTipVerticalOffsetConverter}" UpdateSourceTrigger="PropertyChanged">
                    <Binding ElementName="AppButton" Path="ActualHeight"/>
                    <Binding ElementName="GroupPopupContent" Path="ActualHeight"/>
                    <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                    <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                </MultiBinding>
            </Popup.VerticalOffset>
            <Grid Name="GroupPopupContent"
                  MouseEnter="HoverPreviewContent_MouseEnter"
                  MouseLeave="HoverPreviewContent_MouseLeave"
                  LostMouseCapture="GroupPopupChild_LostMouseCapture">
                <Grid.LayoutTransform>
                    <ScaleTransform>
                        <ScaleTransform.ScaleX>
                            <MultiBinding Converter="{StaticResource inverseScaleConverter}">
                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                            </MultiBinding>
                        </ScaleTransform.ScaleX>
                        <ScaleTransform.ScaleY>
                            <MultiBinding Converter="{StaticResource inverseScaleConverter}">
                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                            </MultiBinding>
                        </ScaleTransform.ScaleY>
                    </ScaleTransform>
                </Grid.LayoutTransform>
                <Grid>
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl" BasedOn="{StaticResource TaskButtonThumbnail}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsGroup}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                        <controls:TaskThumbnail SourceWindowHandle="{Binding Path=Handle}"
                                               Title="{Binding Path=Title}" />
                    </ContentControl>
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl" BasedOn="{StaticResource TaskButtonThumbnail}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsGroup}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                        <ItemsControl ItemsSource="{Binding Path=Windows}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Background="Transparent" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="GroupPopupButton_Click"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            Margin="0,0,5,0"
                                            Cursor="Hand">
                                        <controls:TaskThumbnail SourceWindowHandle="{Binding Path=Handle}"
                                                               Title="{Binding Path=Title}"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </Grid>
            </Grid>
        </Popup>

        <!-- Group indicator button - positioned absolutely behind, 3px wider to peek out on right -->
        <!-- Placed at root level to avoid layout constraints -->
        <Button Name="GroupIndicatorButton"
                Height="{Binding ElementName=AppButton, Path=ActualHeight}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="0"
                IsHitTestVisible="False"
                Visibility="{Binding Path=IsGroup, Converter={StaticResource boolToVisibilityConverter}}">
            <Button.Style>
                <MultiBinding Converter="{StaticResource TaskButtonStyleConverter}">
                    <Binding RelativeSource="{RelativeSource Self}" />
                    <Binding Path="State" />
                </MultiBinding>
            </Button.Style>
            <!-- Empty content - just show the button background/border -->
        </Button>

        <Grid Name="ButtonContainer"
              ClipToBounds="False">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Margin" Value="0,0,0,0" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsGroup}" Value="True">
                            <Setter Property="Margin" Value="0,0,3,0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Button Name="AppButton"
                Panel.ZIndex="1"
                ClipToBounds="False"
                SizeChanged="AppButton_SizeChanged"
                Click="AppButton_OnClick"
                MouseUp="AppButton_OnMouseUp"
                PreviewMouseDown="AppButton_OnPreviewMouseDown"
                ContextMenuOpening="AppButton_OnContextMenuOpening"
                DragEnter="AppButton_OnDragEnter"
                DragLeave="AppButton_OnDragLeave"
                MouseEnter="AppButton_MouseEnter"
                MouseLeave="AppButton_MouseLeave"
                ToolTipService.ShowDuration="60000">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource RunningButtonStyle}">
                        <Style.Triggers>
                            <!-- Pinned-only items are completely invisible until hover -->
                            <DataTrigger Binding="{Binding Path=IsPinnedOnly}" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="MinWidth" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <!-- Completely transparent by default, only show on hover/press -->
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    Padding="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource TaskButtonBackground}" />
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource TaskButtonTopBorder}" />
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1" />
                                                    <Setter TargetName="Border" Property="CornerRadius" Value="2" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource TaskButtonPressedBackground}" />
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource TaskButtonTopBorderPressed}" />
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1" />
                                                    <Setter TargetName="Border" Property="CornerRadius" Value="2" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
        <Grid ClipToBounds="False">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static utilities:Settings.Instance}, Path=CompressTaskbarButtons}" Value="True">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </DataTrigger>
                        <!-- Pinned-only items are always centered (icon-only) -->
                        <DataTrigger Binding="{Binding Path=IsPinnedOnly}" Value="True">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding Path=Icon, Mode=OneWay}"
                   Grid.Column="0"
                   Style="{StaticResource CompressedTaskIcon}" />
            <Image Source="{Binding Path=OverlayIcon, Mode=OneWay}"
                   Grid.Column="0"
                   Style="{DynamicResource TaskOverlayIcon}"
                   Visibility="{Binding Source={x:Static utilities:Settings.Instance}, Path=ShowTaskBadges, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource boolToVisibilityConverter}}" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource TaskLabel}">
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource anyBoolToInvertedVisibilityConverter}">
                        <Binding Source="{x:Static utilities:Settings.Instance}" Path="CompressTaskbarButtons" />
                        <Binding Path="IsPinnedOnly" />
                    </MultiBinding>
                </TextBlock.Visibility>
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource taskLabelConverter}">
                        <Binding Path="Title" />
                        <Binding Path="ProgressValue" />
                        <Binding Path="ProgressState" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        <Button.ContextMenu>
            <ContextMenu Opened="ContextMenu_OpenedOrClosed"
                         Closed="ContextMenu_OpenedOrClosed">
                <MenuItem Header="{DynamicResource restore}"
                          Click="RestoreMenuItem_OnClick"
                          Name="RestoreMenuItem">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Marlett"
                                   Text="&#x32;"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource move}"
                          Click="MoveMenuItem_OnClick"
                          Name="MoveMenuItem" />
                <MenuItem Header="{DynamicResource size}"
                          Click="SizeMenuItem_OnClick"
                          Name="SizeMenuItem" />
                <MenuItem Header="{DynamicResource minimize}"
                          Click="MinimizeMenuItem_OnClick"
                          Name="MinimizeMenuItem">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Marlett"
                                   Text="&#x30;"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource maximize}"
                          Click="MaximizeMenuItem_OnClick"
                          Name="MaximizeMenuItem">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Marlett"
                                   Text="&#x31;"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="{DynamicResource end_task}"
                          Click="EndTaskMenuItem_OnClick"
                          Name="EndTaskMenuItem"
                          Visibility="{Binding Source={x:Static utilities:Settings.Instance}, Path=ShowEndTaskButton, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource boolToVisibilityConverter}}">
                </MenuItem>
                <MenuItem Header="{DynamicResource close}"
                          Click="CloseMenuItem_OnClick"
                          Name="CloseMenuItem">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Marlett"
                                   Text="&#x72;"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Button.ContextMenu>
        <Button.ToolTip>
            <ToolTip Visibility="{Binding Source={x:Static utilities:Settings.Instance}, Path=ShowTaskThumbnails, Converter={StaticResource boolToInvertedVisibilityConverter}}">
                <ToolTip.Style>
                    <Style TargetType="ToolTip"
                           BasedOn="{StaticResource {x:Type ToolTip}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Source={x:Static utilities:Settings.Instance}, Path=ShowTaskThumbnails, UpdateSourceTrigger=PropertyChanged}"
                                                             Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="HorizontalOffset">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource toolTipHorizontalOffsetConverter}" UpdateSourceTrigger="PropertyChanged">
                                                <Binding RelativeSource="{RelativeSource Self}" Path="PlacementTarget.ActualWidth"/>
                                                <Binding RelativeSource="{RelativeSource Self}" Path="ActualWidth"/>
                                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="VerticalOffset">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource toolTipVerticalOffsetConverter}" UpdateSourceTrigger="PropertyChanged">
                                                <Binding RelativeSource="{RelativeSource Self}" Path="PlacementTarget.ActualHeight"/>
                                                <Binding RelativeSource="{RelativeSource Self}" Path="ActualHeight"/>
                                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="TaskbarScale"/>
                                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Placement">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource toolTipPlacementConverter}" UpdateSourceTrigger="PropertyChanged">
                                                <Binding Source="{x:Static utilities:Settings.Instance}" Path="Edge"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToolTip">
                                                <ContentControl Style="{StaticResource TaskButtonThumbnail}">
                                                    <Grid>
                                                        <controls:TaskThumbnail SourceWindowHandle="{Binding Path=Handle}"
                                                                               Title="{Binding Path=Title}">
                                                            <controls:TaskThumbnail.Style>
                                                                <Style TargetType="controls:TaskThumbnail">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=IsGroup}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </controls:TaskThumbnail.Style>
                                                        </controls:TaskThumbnail>
                                                        <controls:TaskGroupThumbnails>
                                                            <controls:TaskGroupThumbnails.Style>
                                                                <Style TargetType="controls:TaskGroupThumbnails">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=IsGroup}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </controls:TaskGroupThumbnails.Style>
                                                        </controls:TaskGroupThumbnails>
                                                    </Grid>
                                                </ContentControl>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ToolTip.Style>
                <TextBlock Text="{Binding Path=Title}" />
            </ToolTip>
        </Button.ToolTip>
            </Button>
        </Grid>
    </Grid>
</UserControl>
