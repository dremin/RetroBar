<UserControl x:Class="RetroBar.Controls.TaskThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RetroBar.Converters"
             xmlns:utilities="clr-namespace:RetroBar.Utilities"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             Height="120"
             Width="180"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <converters:ToolTipHorizontalOffsetConverter x:Key="toolTipHorizontalOffsetConverter" />
        <s:Double x:Key="ConstantScale">1.0</s:Double>
    </UserControl.Resources>
    <Grid Name="PreviewContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title bar at the top -->
        <Border Grid.Row="0"
                Name="TitleBar"
                BorderBrush="{DynamicResource ToolTipForeground}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Window title with ellipsis -->
                <TextBlock Grid.Column="0"
                           Text="{Binding Title}"
                           VerticalAlignment="Center"
                           Margin="6,0,0,0"
                           TextTrimming="CharacterEllipsis"
                           FontSize="11" />

                <!-- Close button -->
                <Button Grid.Column="1"
                        Name="CloseButton"
                        Click="CloseButton_Click"
                        Width="20"
                        Height="20"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Close">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                CornerRadius="2">
                                            <TextBlock Text="&#x2715;"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BalloonCloseButtonHoverBackground}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Thumbnail preview area (rendered by code-behind in this space) -->
        <Grid Grid.Row="1" />
    </Grid>
</UserControl>