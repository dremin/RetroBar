<UserControl x:Class="RetroBar.Controls.TaskGroupThumbnails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:RetroBar.Controls">
    <ItemsControl Name="GroupItemsControl"
                  ItemsSource="{Binding Path=Windows}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Background="Transparent" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <controls:TaskThumbnail SourceWindowHandle="{Binding Path=Handle}"
                                       Title="{Binding Path=Title}"
                                       Margin="0,0,5,0"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
