                            Value="0,3,0,9" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Image"
           x:Key="NotifyIcon"
           BasedOn="{StaticResource NotifyIcon}">
        <Setter Property="Margin"
                Value="0,2,4,2" />
    </Style>

    <Style TargetType="ItemsControl"
           x:Key="ToolbarItems"
